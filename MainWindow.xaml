<Window x:Class="MessangerServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessangerServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Close_Server">
    <StackPanel>
        <Grid Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ComboBox Name="ClientList" Grid.Column="0" Grid.RowSpan="2" ItemsSource="{Binding Clients}"/>
            <Button Content="Ban" Grid.Column="1" Grid.Row="0" Margin="5,0" Click="BanPerson"/>
            <Button Content="Remove from server" Grid.Column="1" Grid.Row="1" Margin="5,0" Click="RemovePerson"/>
        </Grid>
        <Button Content="Close Server" Click="Close_Server" />
    </StackPanel>
</Window>
